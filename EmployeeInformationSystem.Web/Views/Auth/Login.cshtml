@model EmployeeInformationSystem.Model.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="shortcut icon" href="~/Content/beagle_Theme/assets/img/logo-fav.png">
    <title>LPS - Employee Login</title>
    @Styles.Render("~/css/login")
</head>
<body class="be-splash-screen">
    <div class="be-wrapper be-login">
        <div class="be-content">
            <div class="main-content container-fluid">
                <div class="splash-container">
                    <div class="panel panel-default panel-border-color panel-border-color-primary">
                        <div class="panel-heading">
                            <img src="@Url.Content("~/Content/beagle_Theme/assets/img/lps-logo.jpg")" alt="logo" width="102" height="27" class="logo-img"><span class="splash-description">Please enter your credentials.</span>
                            @Html.Raw(TempData["Msg"])
                        </div>
                        <div class="panel-body">
                            @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
                            {
                                @Html.HiddenFor(x => x.ReturnUrl)
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    @Html.EditorFor(model => model.CompanyEmail, new { htmlAttributes = new { @class = "form-control", @placeholder = "Company Email" } })
                                    @Html.ValidationMessageFor(model => model.CompanyEmail)
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password", @autocomplete = "off" } })
                                    @Html.ValidationMessageFor(model => model.Password)
                                </div>
                                <div class="form-group row login-tools">
                                    <div class="col-xs-6">
                                        <a href="@Url.Action("ForgotPassword", "Auth")">Forgot Password?</a>
                                    </div>
                                </div>
                                <div class="form-group login-submit">
                                    <button data-dismiss="modal" type="submit" class="btn btn-primary btn-xl">Sign me in</button>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="splash-footer"><span>Copyright @DateTime.Now.Year Logic Powered Solutions | All Rights Reserved</span></div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/js/login")
    <script type="text/javascript">
        $(document).ready(function () {
            //initialize the javascript
            App.init();
        });
    </script>
</body>
</html>