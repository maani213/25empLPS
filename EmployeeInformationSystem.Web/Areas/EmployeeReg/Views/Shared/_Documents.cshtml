@model IEnumerable<EmployeeInformationSystem.Model.DocumentInfo>

@{
    EmployeeInformationSystem.Model.DocumentInfo _cnicFront = (from cn in Model.ToList() where cn.DocumentType == "CNICFront" select cn).FirstOrDefault();
    EmployeeInformationSystem.Model.DocumentInfo _cnicBack = (from cn in Model.ToList() where cn.DocumentType == "CNICBack" select cn).FirstOrDefault();
    EmployeeInformationSystem.Model.DocumentInfo _cv = (from cv in Model.ToList() where cv.DocumentType == "CV" select cv).FirstOrDefault();

    List<EmployeeInformationSystem.Model.DocumentInfo> _otherDocsList = (from od in Model.ToList() where od.DocumentType == "Other" select od).ToList();
}

<div class="row">
    <div class="col-md-6 col-md-push-3">
        <p style="color:red;"><b>Instruction: </b>Rename all of your files properly before uploading.</p>
        <hr />

        <h4 class="xs-mb-20"><b>Upload Updated CV</b></h4>
        <div class="panel panel-border-color panel-border-color-warning">

            @if (_cv != null)
            {
                <br />
                using (Html.BeginForm("DeleteDocument", "File", FormMethod.Post, new { @class = "form-horizontal group-border-dashed", @style = "border-radius: 0px;" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("id", _cv.Id)

                    <ol class="breadcrumb">
                        <li class="active" style="width:75%;">@_cv.FileName</li>
                        <li class="active">

                            <button type="submit" onclick="return confirm('Are you sure want to delete CV?');" style="border: 0px; background-color: transparent; color: #4285F4;  cursor: hand;">
                                <i class="icon icon-left mdi mdi-delete"></i>
                                Delete
                            </button>

                        </li>
                    </ol>
                }
            }
            else
            {
                using (Html.BeginForm("UploadDocuments", "File", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal group-border-dashed", @style = "border-radius: 0px;" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("DocumentType", "CV")

                    <div class="form-group">
                        <label class="col-sm-2 control-label">CV</label>
                        <div class="col-sm-7">
                            <input type="file" name="file" id="file" class="form-control">
                        </div>
                        <div class="col-sm-3">
                            <button type="submit" class="btn btn-space btn-primary">
                                <i class="icon icon-left mdi mdi mdi-upload"></i>
                                Upload
                            </button>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

