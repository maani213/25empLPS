<div class="row">
    <div class="col-md-6 col-md-push-3">
        <h4 class="xs-mb-20"><b>Upload Other Documents</b></h4>
        <ol>
            <li>
                Education Certificate(s)
            </li>
            <li>
                Experience Certificate(s)
            </li>
            <li>
                Professional Certifications (if any)
            </li>
            <li>
                Salary Certificate of last Employeer
            </li>
        </ol>
        <div class="panel panel-border-color panel-border-color-warning">
        </div>
    </div>
    <div class="col-md-12 col-md-push-1">
        @Html.Partial("_UploadOtherDocuments", new EmployeeInformationSystem.Model.DocumentInfo())
    </div>

    @if (_otherDocsList.Count() > 0)
            {
        <div class="col-md-6 col-md-push-3">
            @foreach (var item in _otherDocsList)
            {
                using (Html.BeginForm("DeleteDocument", "File", FormMethod.Post, new { @class = "form-horizontal group-border-dashed", @style = "border-radius: 0px;" }))
