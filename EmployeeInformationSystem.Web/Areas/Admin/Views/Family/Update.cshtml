@model EmployeeInformationSystem.Model.FamilyMemberInfo

@{
    ViewBag.Title = "Update Family Member";
    Layout = null;
}

@Scripts.Render("~/js/core")

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-border-color panel-border-color-warning">
            <div class="row">
                <div class="col-md-12">
                    <br />
                    @using (Html.BeginForm("Update", "Family", FormMethod.Post, new { @class = "form-horizontal group-border-dashed", @style = "border-radius: 0px;" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(x => x.Id)
                        @Html.HiddenFor(x => x.EmployeeInfoId)

                        <div class="form-group">
                            <label class="col-sm-3 control-label">Name</label>
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">CNIC</label>
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.CNIC, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CNIC)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label">Relation</label>
                            <div class="col-sm-6">
                                @Html.DropDownListFor(model => model.Relation,
                                                           new List<SelectListItem>{
                                                               new SelectListItem{ Text="Wife", Value="Wife"},
                                                               new SelectListItem{ Text="Son", Value="Son"},
                                                               new SelectListItem{ Text="Daughter", Value="Daughter"}

                                                           }, "-- Select --", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Relation)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label"></label>
                            <div class="col-sm-6">
                                <button type="submit" class="btn btn-success">Update</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
