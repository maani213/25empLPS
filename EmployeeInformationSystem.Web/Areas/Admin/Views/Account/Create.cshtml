@model EmployeeInformationSystem.Model.AccountInfo

@{
    ViewBag.Title = "Create Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default panel-border-color panel-border-color-primary">
                <div class="panel-heading panel-heading-divider">Create Account</div>
                <div class="panel-body">
                    @Html.Raw(TempData["Msg"])
                    <br />
                    <div class="row">
                        <div class="col-md-10 col-md-push-1">
                            <div class="panel panel-border-color panel-border-color-warning">
                                @using (Html.BeginForm("Create", "Account", FormMethod.Post, new { @class = "form-horizontal group-border-dashed", @style = "border-radius: 0px;" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">Company Email</label>
                                        <div class="col-sm-6">
                                            @Html.EditorFor(model => model.CompanyEmail, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.CompanyEmail)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-3 control-label"></label>
                                        <div class="col-sm-6">
                                            <button type="submit" class="btn btn-space btn-success">
                                                Create
                                            </button>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <br />
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}