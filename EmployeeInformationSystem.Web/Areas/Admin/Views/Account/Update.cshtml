@model EmployeeInformationSystem.Model.AccountInfo

@{
    ViewBag.Title = "Update Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default panel-border-color panel-border-color-primary">
                <div class="panel-heading panel-heading-divider">Update Account</div>
                <div class="panel-body">
                    <br />
                    <div class="row">
                        <div class="col-md-10 col-md-push-1">
                            <div class="panel panel-border-color panel-border-color-warning">
                                @if (Model.IsCheckListCompleted == true)
                                {
                                    using (Html.BeginForm("Update", "Account", FormMethod.Post, new { @class = "form-horizontal group-border-dashed", @style = "border-radius: 0px;" }))
                                    {
                                        @Html.HiddenFor(model => model.Id)
                                        @Html.AntiForgeryToken()

                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Employee Company Email</label>
                                            <div class="col-sm-6">
                                                @Html.EditorFor(model => model.CompanyEmail, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                @Html.ValidationMessageFor(model => model.CompanyEmail)
                                            </div>
                                        </div>

                                        if (User.IsInRole("SuperAdmin"))
                                        {
                                            <div class="form-group">
                                                <label class="col-sm-3 control-label">Role</label>
                                                <div class="col-sm-6">
                                                    @Html.DropDownListFor(model => model.RoleId, new SelectList(Model.RolesList, "Id", "RoleName"), new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.RoleId)
                                                </div>
                                            </div>
                                        }

                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">Account Status</label>
                                            <div class="col-sm-6">
                                                <div class="be-checkbox be-checkbox-color inline">
                                                    <input type="checkbox" name="IsActive" value="true" id="IsActive" @Html.Raw((Model.IsActive) ? "checked=\"checked\"" : "") />
                                                    <label for="IsActive">Is Active</label>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-3 control-label"></label>
                                            <div class="col-sm-6">
                                                <button type="submit" class="btn btn-space btn-primary">
                                                    <i class="icon icon-left mdi mdi-refresh"></i>
                                                    Update
                                                </button>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    using (Html.BeginForm("ResendEmail", "Account", FormMethod.Post, new { @class = "form-horizontal group-border-dashed", @style = "border-radius: 0px;" }))
                                    {
                                        @Html.HiddenFor(model => model.Id)
                                        @Html.AntiForgeryToken()

                                        <div class="form-group">
                                            <label class="col-sm-5 control-label"></label>
                                            <div class="col-sm-6">
                                                <button type="submit" class="btn btn-space btn-primary">
                                                    <i class="icon icon-left mdi mdi-email"></i>
                                                    Resend Email
                                                </button>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <br />
            </div>
        </div>
    </div>
</div>

