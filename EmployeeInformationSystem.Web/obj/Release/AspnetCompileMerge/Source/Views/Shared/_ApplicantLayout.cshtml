<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="shortcut icon" href="~/Content/beagle_Theme/assets/img/logo-fav.png">
    <title>@ViewBag.Title - Employee Information System</title>
    
    <link rel="stylesheet" type="text/css" href="~/Content/beagle_Theme/assets/lib/perfect-scrollbar/css/perfect-scrollbar.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/beagle_Theme/assets/lib/material-design-icons/css/material-design-iconic-font.min.css" />
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link rel="stylesheet" type="text/css" href="~/Content/beagle_Theme/assets/lib/datetimepicker/css/bootstrap-datetimepicker.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/beagle_Theme/assets/lib/daterangepicker/css/daterangepicker.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/beagle_Theme/assets/lib/select2/css/select2.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/beagle_Theme/assets/lib/bootstrap-slider/css/bootstrap-slider.css" />
    <link rel="stylesheet" href="~/Content/beagle_Theme/assets/css/style.css" type="text/css" />
    
</head>
<body>
    <div class="be-wrapper be-fixed-sidebar">
        <nav class="navbar navbar-default navbar-fixed-top be-top-header">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a href="#" class="navbar-brand"></a>
                </div>
                <div class="be-right-navbar be-right-navbar-flex">
                    <div class="search-container">
                    </div>
                    <ul class="nav navbar-nav navbar-right be-icons-nav">
                        <li class="dropdown">
                            <a href="@Url.Action("Logout", "Auth")"><span class="icon mdi mdi-power"></span> <strong>Logout</strong></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        
        <div class="be-content" style="margin-left:0px;">
            @RenderBody()
            <div class="splash-footer"><span>Copyright @DateTime.Now.Year Logic Powered Solutions | All Rights Reserved</span></div>
        </div>
    </div>

    <script src="~/Content/beagle_Theme/assets/lib/jquery/jquery.min.js" type="text/javascript"></script>
    <script src="~/Content/beagle_Theme/assets/lib/perfect-scrollbar/js/perfect-scrollbar.jquery.min.js" type="text/javascript"></script>
    <script src="~/Content/beagle_Theme/assets/js/main.js" type="text/javascript"></script>
    <script src="~/Content/beagle_Theme/assets/lib/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Content/beagle_Theme/assets/lib/jquery-ui/jquery-ui.min.js" type="text/javascript"></script>
    <script src="~/Content/beagle_Theme/assets/lib/jquery.nestable/jquery.nestable.js" type="text/javascript"></script>
    <script src="~/Content/beagle_Theme/assets/lib/moment.js/min/moment.min.js" type="text/javascript"></script>
    <script src="~/Content/beagle_Theme/assets/lib/datetimepicker/js/bootstrap-datetimepicker.min.js" type="text/javascript"></script>
    <script src="~/Content/beagle_Theme/assets/lib/daterangepicker/js/daterangepicker.js" type="text/javascript"></script>
    <script src="~/Content/beagle_Theme/assets/lib/select2/js/select2.min.js" type="text/javascript"></script>
    <script src="~/Content/beagle_Theme/assets/lib/select2/js/select2.full.min.js" type="text/javascript"></script>
    <script src="~/Content/beagle_Theme/assets/lib/bootstrap-slider/js/bootstrap-slider.js" type="text/javascript"></script>
    <script type="text/javascript">
      $(document).ready(function(){
      	//initialize the javascript
      	App.init();
      	App.formElements();
      });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
