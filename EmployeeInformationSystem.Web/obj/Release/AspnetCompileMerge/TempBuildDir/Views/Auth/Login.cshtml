@model EmployeeInformationSystem.Model.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="shortcut icon" href="assets/img/logo-fav.png">
    <title>LPS - Employee Login</title>
    <link rel="stylesheet" type="text/css" href="~/Content/beagle_Theme/assets/lib/perfect-scrollbar/css/perfect-scrollbar.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/beagle_Theme/assets/lib/material-design-icons/css/material-design-iconic-font.min.css" />
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link rel="stylesheet" href="~/Content/beagle_Theme/assets/css/style.css" type="text/css" />
</head>
<body class="be-splash-screen">
    <div class="be-wrapper be-login">
        <div class="be-content">
            <div class="main-content container-fluid">
                <div class="splash-container">
                    <div class="panel panel-default panel-border-color panel-border-color-primary">
                        <div class="panel-heading">
                            <img src="~/Content/beagle_Theme/assets/img/lps-logo.jpg" alt="logo" width="102" height="27" class="logo-img"><span class="splash-description">Please enter your credentials.</span>
                            @Html.Raw(TempData["Msg"])
                        </div>
                        <div class="panel-body">
                            @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    @Html.EditorFor(model => model.CompanyEmail, new { htmlAttributes = new { @class = "form-control", @placeholder = "Company Email" } })
                                    @*<ul class="parsley-errors-list filled"><li class="parsley-type">Please enter username.</li></ul>*@
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password" } })
                                    @*<ul class="parsley-errors-list filled"><li class="parsley-type">Please enter password</li></ul>*@
                                </div>
                                <div class="form-group row login-tools">
                                    <div class="col-xs-6 login-remember">
                                        <div class="be-checkbox">
                                            <input type="checkbox" id="remember">
                                            <label for="remember">Remember Me</label>
                                        </div>
                                    </div>
                                    <div class="col-xs-6 login-forgot-password"><a href="#">Forgot Password?</a></div>
                                </div>
                                <div class="form-group login-submit">
                                    <button data-dismiss="modal" type="submit" class="btn btn-primary btn-xl">Sign me in</button>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="splash-footer"><span>Copyright @DateTime.Now.Year Logic Powered Solutions | All Rights Reserved</span></div>
                    @*<div class="splash-footer"><span>Don't have an account? <a href="#">Sign Up</a></span></div>*@
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/beagle_Theme/assets/lib/jquery/jquery.min.js" type="text/javascript"></script>
    <script src="~/Content/beagle_Theme/assets/lib/perfect-scrollbar/js/perfect-scrollbar.jquery.min.js" type="text/javascript"></script>
    <script src="~/Content/beagle_Theme/assets/js/main.js" type="text/javascript"></script>
    <script src="~/Content/beagle_Theme/assets/lib/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            //initialize the javascript
            App.init();
        });

    </script>
</body>
</html>