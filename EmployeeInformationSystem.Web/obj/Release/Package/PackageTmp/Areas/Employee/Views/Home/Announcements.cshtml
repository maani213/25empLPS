@model IEnumerable<EmployeeInformationSystem.Model.AnnouncementInfo>

@{
    ViewBag.Title = "Announcement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default panel-border-color panel-border-color-primary">
                <div class="panel-heading panel-heading-divider">Announcements</div>
                <div class="panel-body">
                    @if (Model.Count() > 0)
                    {
                        foreach (var item in Model)
                        {
                            <br />
                            <div class="row">
                                <div class="col-md-10 col-md-push-1">
                                    <div class="panel panel-border-color panel-border-color-warning">
                                        <div class="panel-heading" style="text-align: justify">
                                            @item.Title &nbsp;
                                            @{
                                                double diff = (DateTime.Now - DateTime.Parse(item.CreatedOn.ToString())).TotalDays;

                                                if (diff < 5)
                                                {
                                                    <img src='@Url.Content("~/Content/new.gif")' />
                                                }
                                            }
                                        </div>
                                        <div class="panel-body" style="text-align: justify">
                                            @item.Description
                                            <br /><br />
                                            Posted on @item.CreatedOn.Value.ToString("dd MMMM yyyy").
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                        }
                    }

                    else
                    {
                        <h5 class="text-center">No announcement found</h5>
                    }

                </div>
                <br />
            </div>
        </div>
    </div>
</div>


