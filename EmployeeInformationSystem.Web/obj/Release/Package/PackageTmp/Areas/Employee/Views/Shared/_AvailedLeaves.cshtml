@model EmployeeInformationSystem.Model.AvailedLeaveViewModel

<!--Form Modals-->
<div id="availed-leaves" tabindex="-1" role="dialog" class="modal fade colored-header colored-header-primary">
    <div class="modal-dialog custom-width">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" data-dismiss="modal" aria-hidden="true" class="close md-close"><span class="mdi mdi-close"></span></button>
                <h3 class="modal-title">Availed Leaves</h3>
            </div>
            <div class="modal-body">
                <div class="panel panel-border-color panel-border-color-warning">
                    <div class="panel-body table-responsive">
                        <h4 class="xs-mb-20">
                            Casual Leaves
                        </h4>
                        <table class="table table-striped table-borderless">
                            <thead>
                                <tr>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Total Leaves</th>
                                    <th>Request Date</th>
                                </tr>
                            </thead>
                            <tbody class="no-border-x">
                                @foreach (var item in Model.CasualLeaveRequestInfoList)
                                {
                                    if (item.EndDate.Date < DateTime.Now.Date)
                                    {
                                        <tr>
                                            <td>@item.StartDate.ToString("dd MMMM yyyy")</td>
                                            <td>@item.EndDate.ToString("dd MMMM yyyy")</td>
                                            <td>
                                                @{
                                                    int _totalLeaves = EmployeeInformationSystem.Web.Common.LeavesCounter.CountLeavesWithoutWeekend(item.StartDate, item.EndDate);
                                                }

                                                @_totalLeaves
                                            </td>
                                            <td>@item.RequestDate.ToString("dd MMMM yyyy")</td>
                                        </tr>
                                      }
                                 }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="panel panel-border-color panel-border-color-warning">
                    <div class="panel-body table-responsive">
                        <h4 class="xs-mb-20">
                            Annual Leaves
                        </h4>
                        <table class="table table-striped table-borderless">
                            <thead>
                                <tr>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Total Leaves</th>
                                    <th>Request Date</th>
                                </tr>
                            </thead>
                            <tbody class="no-border-x">
                                @foreach (var item in Model.AnnualLeaveRequestInfoList)
                                {
                                    if (item.EndDate.Date < DateTime.Now.Date)
                                    {
                                        <tr>
                                            <td>@item.StartDate.ToString("dd MMMM yyyy")</td>
                                            <td>@item.EndDate.ToString("dd MMMM yyyy")</td>
                                            <td>
                                                @{
                                                    int _totalLeaves = EmployeeInformationSystem.Web.Common.LeavesCounter.CountLeavesWithoutWeekend(item.StartDate, item.EndDate);
                                                }

                                                @_totalLeaves
                                            </td>
                                            <td>@item.RequestDate.ToString("dd MMMM yyyy")</td>
                                        </tr>
                                      }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>